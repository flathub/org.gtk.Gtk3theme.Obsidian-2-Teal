{
   "id":"org.gtk.Gtk3theme.Obsidian-2-Teal",
   "branch":"3.22",
   "runtime":"org.freedesktop.Sdk",
   "build-extension":true,
   "sdk":"org.freedesktop.Sdk",
   "runtime-version":"22.08",
   "appstream-compose":false,
   "separate-locales":false,
   "modules":[
      {
         "name":"Obsidian-2-Teal",
         "buildsystem":"simple",
         "build-commands":[
            "tar -xf obsidian-2-theme.tar.xz",
            "install -Dm644 Obsidian-2-Teal/gtk-3.20/gtk.css /usr/share/runtime/share/themes/Obsidian-2-Teal/gtk-3.0",
            "install -Dm644 Obsidian-2-Teal/gtk-3.0/colAccents.css /usr/share/runtime/share/themes/Obsidian-2-Teal/gtk-3.0",
            "install -Dm644 Obsidian-2-Teal/gtk-3.0/colCommon.css /usr/share/runtime/share/themes/Obsidian-2-Teal/gtk-3.0",
            "install -Dm644 --target-directory=/usr/share/runtime/share/themes/Obsidian-2-Teal/gtk-3.0/assets Obsidian-2-Teal/gtk-3.0/assets/*",
            "install -Dm644 Obsidian-2-Teal/index.theme /usr/share/runtime/share/themes/Obsidian-2-Teal/index.theme"
         ],
         "sources":[
            {
               "type":"file",
               "url":"https://github.com/madmaxms/theme-obsidian-2/releases/download/v2.22/obsidian-2-theme.tar.xz",
               "dest-filename": "obsidian-2-theme.tar.xz",
               "sha256":"5af4a5cc2a1c93450c76f6a31d104d1d2ba054c4ad475143b7dbe3cd7e4aa7c0"
            }
         ]
      },
      {
         "name":"appdata",
         "buildsystem":"simple",
         "build-commands":[
            "mkdir -p ${FLATPAK_DEST}/share/appdata",
            "cp org.gtk.Gtk3theme.Obsidian-2-Teal.metainfo.xml ${FLATPAK_DEST}/share/appdata",
            "appstream-compose --basename=org.gtk.Gtk3theme.Obsidian-2-Teal --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Obsidian-2-Teal"
         ],
         "sources":[
            {
               "type":"file",
               "path":"org.gtk.Gtk3theme.Obsidian-2-Teal.metainfo.xml"
            }
         ]
      }
   ]
}
